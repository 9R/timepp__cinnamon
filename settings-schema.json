{
    "layout1": {
        "type": "layout",
        "pages": ["page1", "page2", "page3", "page4", "page5"],

        "page1": {
            "type": "page",
            "title": "General",
            "sections": ["section1"]
        },

        "page2": {
            "type": "page",
            "title": "Timer",
            "sections": ["section2"]
        },

        "page3": {
            "type": "page",
            "title": "Stopwatch",
            "sections": ["section3"]
        },

        "page4": {
            "type": "page",
            "title": "Pomodoro",
            "sections": ["section4"]
        },

        "page5": {
            "type": "page",
            "title": "Alarms",
            "sections": ["section5"]
        },

        "section1": {
            "type": "section",
            "title": "General Settings",
            "keys": ["unicon_mode", "unicon"]
        },

        "section2": {
            "type": "section",
            "title": "Timer Settings",
            "keys": ["timer_icon", "timer_separate_menu", "timer_panel_mode", "timer_show_secs", "timer_key_open"]
        },

        "section3": {
            "type": "section",
            "title": "Stopwatch Settings",
            "keys": ["stopwatch_icon", "stopwatch_separate_menu", "stopwatch_panel_mode", "stopwatch_show_secs", "stopwatch_key_open"]
        },

        "section4": {
            "type": "section",
            "title": "Pomodoro Settings",
            "keys": ["pomo_icon", "pomo_separate_menu", "pomo_panel_mode", "pomo_show_secs", "pomo_key_open"]
        },

        "section5": {
            "type": "section",
            "title": "Alarms Settings",
            "keys": ["alarm_icon", "alarm_separate_menu", "alarm_key_open", "alarm_snooze_duration"]
        }
    },

    "unicon_mode": {
        "type": "switch",
        "description": "Show single icon in panel",
        "default": false
    },

    "unicon": {
        "dependency": "unicon_mode",
        "type": "iconfilechooser",
        "indent": true,
        "description": "Icon when using one panel item",
        "default": "/img/unicon-symbolic.svg",
        "tooltip": "Icon name, absolute path, or path relative to this applet's dir.\nTo use a symbolic icon, add '-symbolic' to it's name."
    },







    "timer_icon": {
        "type": "iconfilechooser",
        "description": "Timer Panel Icon",
        "default": "/img/timer-symbolic.svg",
        "tooltip": "Icon name, absolute path, or path relative to this applet's dir.\nTo use a symbolic icon, add '-symbolic' to it's name."
    },

    "timer_separate_menu": {
        "type": "switch",
        "description": "Show in separate menu",
        "default": false
    },

    "timer_panel_mode": {
        "type": "combobox",
        "description": "Panel Item Mode",
        "default": 2,
        "options": {
            "Icon only": 0,
            "Label only": 1,
            "Icon and label": 2
        }
    },

    "timer_show_secs": {
        "type": "switch",
        "description": "Show seconds",
        "default": false,
        "tooltip": "Not showing seconds improves performance slightly and removes frequent\nvisual updates from the panel."
    },

    "timer_key_open": {
        "type": "keybinding",
        "description": "Menu shortcut key",
        "default": ""
    },








    "stopwatch_icon": {
        "type": "iconfilechooser",
        "description": "Stopwatch Panel Icon",
        "default": "/img/stopwatch-symbolic.svg",
        "tooltip": "Icon name, absolute path, or path relative to this applet's dir.\nTo use a symbolic icon, add '-symbolic' to it's name."
    },

    "stopwatch_separate_menu": {
        "type": "switch",
        "description": "Show in separate menu",
        "default": false
    },

    "stopwatch_panel_mode": {
        "type": "combobox",
        "description": "Panel Item Mode",
        "default": 2,
        "options": {
            "Icon only": 0,
            "Label only": 1,
            "Icon and label": 2
        }
    },

    "stopwatch_show_secs": {
        "type": "switch",
        "description": "Show seconds",
        "default": false,
        "tooltip": "Not showing seconds improves performance slightly and removes frequent\nvisual updates from the panel."
    },

    "stopwatch_key_open": {
        "type": "keybinding",
        "description": "Menu shortcut key",
        "default": ""
    },








    "pomo_icon": {
        "type": "iconfilechooser",
        "description": "Pomodoro Panel Icon",
        "default": "/img/pomodoro-symbolic.svg",
        "tooltip": "Icon name, absolute path, or path relative to this applet's dir.\nTo use a symbolic icon, add '-symbolic' to it's name."
    },

    "pomo_separate_menu": {
        "type": "switch",
        "description": "Show in separate menu",
        "default": false
    },

    "pomo_panel_mode": {
        "type": "combobox",
        "description": "Panel Item Mode",
        "default": 2,
        "options": {
            "Icon only": 0,
            "Label only": 1,
            "Icon and label": 2
        }
    },

    "pomo_show_secs": {
        "type": "switch",
        "description": "Show seconds",
        "default": false,
        "tooltip": "Not showing seconds improves performance slightly and removes frequent\nvisual updates from the panel."
    },

    "pomo_key_open": {
        "type": "keybinding",
        "description": "Menu shortcut key",
        "default": ""
    },








    "alarm_icon": {
        "type": "iconfilechooser",
        "description": "Alarms Panel Icon",
        "default": "/img/alarms-symbolic.svg",
        "tooltip": "Icon name, absolute path, or path relative to this applet's dir.\nTo use a symbolic icon, add '-symbolic' to it's name."
    },

    "alarm_separate_menu": {
        "type": "switch",
        "description": "Show in separate menu",
        "default": false
    },

    "alarm_key_open": {
        "type": "keybinding",
        "description": "Menu shortcut key",
        "default": ""
    },

    "alarm_snooze_duration": {
        "type": "spinbutton",
        "default": 300,
        "min": 1,
        "max": 81420,
        "units": "sec",
        "step": 1,
        "description": "Snooze duration"
    }
}
